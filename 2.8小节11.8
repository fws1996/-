#include <iostream>
#include <stdio.h>
struct student{
    int num;
    char name[10];
    int c1;
    int c2;
    int c3;
}stu[10];

void input(student s[]){
    for (int i = 0; i < 10; ++i) {
        scanf("%d%s%d%d%d",&s[i].num,s[i].name,&s[i].c1,&s[i].c2,&s[i].c3);
    }
}

void printAverage(student s[]){
    double a1,a2,a3;
    for (int i = 0; i < 10; ++i) {
        a1+=stu[i].c1;
        a2+=stu[i].c2;
        a3+=stu[i].c3;
    }
    a1/=10.0;
    a2/=10.0;
    a3/=10.0;
    printf("%.2f %.2f %.2f\n",a1, a2, a3);
}

void printA(student s[]){
    double aveScore[10];
    for (int i = 0; i < 10; ++i) {
        int re = s[i].c1 + s[i].c2 + s[i].c3;
        aveScore[i] = re / 3.0;
    }
    int max = 0;
    for (int j = 1; j < 10; ++j) {
        if(aveScore[max] < aveScore[j])
            max = j;
    }
    printf("%d %s %d %d %d\n",s[max].num,s[max].name,s[max].c1,s[max].c2,s[max].c3);
}
int main() {
    input(stu);
    printAverage(stu);
    printA(stu);
    return 0;
}
